<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="head_textview_style">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="menu_text">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sales_form_field_style">
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="sales_form_field_address_style">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>